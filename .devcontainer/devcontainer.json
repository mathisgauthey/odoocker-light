{
    "name": "odoocker-light",
    "workspaceFolder": "/workspace",
    "dockerComposeFile": [
        "docker-compose.yaml",
        "docker-compose.devcontainer.yaml",
        "docker-compose.extends.yaml"
    ],
    "service": "odoo_web",
    "remoteUser": "root",
    "shutdownAction": "stopCompose",
    "overrideCommand": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.debugpy",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
    },
    "onCreateCommand": "[[ ! -L /workspace/odoo/odoo ]] && ln -s /usr/lib/python3/dist-packages/odoo /workspace/odoo/odoo; [[ ! -L /workspace/odoo/design-themes ]] && ln -s /usr/lib/python3/dist-packages/odoo/design-themes /workspace/odoo/design-themes"
}